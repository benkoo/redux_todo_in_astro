---
import PanelLabel from '../ui/PanelLabel.astro';
---

<div class="flex flex-col h-screen">
  <!-- Top Banner -->
  <header class="h-16 bg-background border-b border-neutral-200 dark:border-neutral-800">
    <slot name="banner" />
  </header>

  <!-- Main Content Area -->
  <div class="flex-1 flex">
    <!-- Static Sidebar -->
    <aside class="w-12 bg-muted border-r border-neutral-200 dark:border-neutral-800">
      <slot name="sidebar" />
    </aside>

    <!-- Resizable Panels Container -->
    <div class="flex-1 bg-background">
      <slot />
    </div>
  </div>
</div>
