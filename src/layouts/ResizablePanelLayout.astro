---
import { PanelController } from '../components/panels/PanelSystem.tsx';

interface Props {
  leftPanelWidth?: string;
  rightPanelWidth?: string;
}

const { leftPanelWidth = '200px', rightPanelWidth = '200px' } = Astro.props;
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Three Panel Layout</title>
  <link rel="stylesheet" href="/styles/global.css" />
</head>
<body>
  <div class="app">
    <div class="app-layout">
      <header class="app-header">
        <slot name="header">
          <h1>Three Panel Layout</h1>
        </slot>
      </header>

      <div class="app-content">
        <PanelController client:visible>
          <div class="panel-layout">
            <div class="left-panel" style={`width: ${leftPanelWidth};`}>
              <slot name="left" />
            </div>
            <div class="main-panel">
              <slot name="main" />
            </div>
            <div class="right-panel" style={`width: ${rightPanelWidth};`}>
              <slot name="right" />
            </div>
          </div>
        </PanelController>
      </div>

      <footer class="app-footer">
        <slot name="footer">
          <p>&copy; 2025 Panel Layout Demo</p>
        </slot>
      </footer>
    </div>
  </div>

  <script>
    let isResizing = false;
    let currentHandle = null;
    let startX = 0;
    let leftWidth = 0;
    let rightWidth = 0;

    function initResizable() {
      const leftPanel = document.getElementById('leftPanel');
      const rightPanel = document.getElementById('rightPanel');
      const leftHandle = document.getElementById('leftHandle');
      const rightHandle = document.getElementById('rightHandle');

      if (!leftPanel || !rightPanel || !leftHandle || !rightHandle) return;

      function startResize(e, handle) {
        isResizing = true;
        currentHandle = handle;
        startX = e.pageX;
        leftWidth = leftPanel.offsetWidth;
        rightWidth = rightPanel.offsetWidth;

        document.body.style.cursor = 'col-resize';
        document.body.style.userSelect = 'none';
      }

      function doResize(e) {
        if (!isResizing) return;

        const diff = e.pageX - startX;

        if (currentHandle === leftHandle) {
          const newWidth = Math.max(50, leftWidth + diff);
          leftPanel.style.width = `${newWidth}px`;
        } else if (currentHandle === rightHandle) {
          const newWidth = Math.max(50, rightWidth - diff);
          rightPanel.style.width = `${newWidth}px`;
        }
      }

      function stopResize() {
        isResizing = false;
        currentHandle = null;
        document.body.style.cursor = '';
        document.body.style.userSelect = '';
      }

      leftHandle.addEventListener('mousedown', (e) => startResize(e, leftHandle));
      rightHandle.addEventListener('mousedown', (e) => startResize(e, rightHandle));
      document.addEventListener('mousemove', doResize);
      document.addEventListener('mouseup', stopResize);
    }

    // Initialize when the DOM is loaded
    document.addEventListener('astro:page-load', initResizable);
  </script>

  <style>
    .app {
      height: 100vh;
      width: 100vw;
      overflow: hidden;
    }

    .app-layout {
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    .app-header {
      flex: 0 0 auto;
      padding: 1rem;
      background: #f8f9fa;
      border-bottom: 1px solid #dee2e6;
    }

    .app-header h1 {
      margin: 0;
      font-size: 1.5rem;
      color: #333;
    }

    .app-content {
      flex: 1;
      min-height: 0;
      position: relative;
    }

    <PanelController client:load>
      <div class="panel-layout">
        <slot />
      </div>
    </PanelController>

    <style>
      .panel-layout {
        display: flex;
        height: 100vh;
        gap: var(--panel-gap);
      }
    </style>

    .left-panel {
      min-width: 200px;
      overflow: auto;
      background: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 4px;
    }

    .main-panel {
      min-width: 0;
      overflow: auto;
      background: #ffffff;
      border: 1px solid #dee2e6;
      border-radius: 4px;
    }

    .right-panel {
      min-width: 0;
      overflow: auto;
      background: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 4px;
    }

    .app-footer {
      flex: 0 0 auto;
      padding: 1rem;
      background: #f8f9fa;
      border-top: 1px solid #dee2e6;
      text-align: center;
      color: #666;
    }

    .app-footer p {
      margin: 0;
    }
  </style>
</body>
</html>