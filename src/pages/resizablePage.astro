---
import ResizablePanel from '../components/ResizablePanel';
import ResizablePanelLayout from '../layouts/flexablePanelLayout.astro';

---

<ResizablePanelLayout>  
  <!-- Example 1: Using default content -->
  <ResizablePanel client:only="react" useDefaultContent={true} />

  <!-- Example 2: Using custom content -->
  <ResizablePanel 
    client:only="react"
    useDefaultContent={false}
  >
    <div slot="leftPanel">
      <!-- left panel content -->
    </div>
    <div slot="mainPanel">
      <!-- main panel content -->
    </div>
  </ResizablePanel>
</ResizablePanelLayout>